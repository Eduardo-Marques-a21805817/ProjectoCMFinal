<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjectoCMFinal" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.ProjectoCMFinal" parent="Base.Theme.ProjectoCMFinal" />

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:background">@color/dark_gold</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>



    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_gold</item>
        <item name="colorPrimaryDark">@color/dark_gold</item>
        <item name="android:itemBackground">@color/white</item><!-- colocar isto como variavel entre night e day theme TODO !-->
        <item name="android:textColor">@color/white</item><!-- colocar isto como variavel entre night e day theme TODO !-->
    </style>
</resources>